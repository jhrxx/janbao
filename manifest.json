{
    "manifest_version": 2,
    "author": "jhrxx",
    "name": "janbao",
    "description": "小破站",
    "version": "1.0.0",
    "icons": {
        "48": "icon.png",
        "96": "icon.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "web_accessible_resources": [
        "images/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://janbao.net/*"
            ],
            "css": [
                "janbao-dark-theme.css"
            ],
            "js": [
                "janbao.js"
            ]
        },
        {
            "matches": [
                "*://*.jandan.net/*"
            ],
            "css": [
                "jandan-dark-theme.css"
            ],
            "js": [
                "jandan.js"
            ]
        }
    ],
    "permissions": [
        "*://janbao.net/*",
        "*://jandan.net/*",
        "*://*.jandan.net/*"
    ]
}