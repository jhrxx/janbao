{
  "manifest_version": 2,
  "author": "jhrxx",
  "name": "煎蛋小破站",
  "description": "煎包小破站夜间模式、聊天框增强。",
  "version": "1.0.0",
  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png"
  },
  "web_accessible_resources": ["images/*", "node_modules/photoswipe/dist/*"],
  "content_scripts": [
    {
      "matches": ["*://janbao.net/*"],
      "css": ["janbao-dark-theme.css"],
      "js": ["janbao.js"]
    },
    {
      "matches": ["*://jandan.net/*", "*://*.jandan.net/*"],
      "css": [
        "jandan-dark-theme.css",
        "node_modules/photoswipe/dist/photoswipe.css",
        "node_modules/photoswipe/dist/default-skin/default-skin.css"
      ],
      "js": [
        "node_modules/photoswipe/dist/photoswipe.min.js",
        "node_modules/photoswipe/dist/photoswipe-ui-default.min.js",
        "jandan.js"
      ]
    }
  ],
  "permissions": ["*://janbao.net/*", "*://jandan.net/*", "*://*.jandan.net/*"]
}
