{
    "manifest_version": 2,
    "author": "jhrxx",
    "name": "janbao",
    "description": "小破站",
    "version": "1.0.0",
    "icons": {
        "48": "icon.png",
        "96": "icon.png"
    },
    "background": {
        "scripts": ["src/js/background.js"]
    },
    "web_accessible_resources": ["src/images/*","src/js/*", "src/css/*"],
    "content_scripts": [{
        "matches": ["*://janbao.net/*"],
        "css": [ "src/css/janbao-dark-theme.css" ],
        "js": ["src/js/content_script.js"]
    },{
        "matches": ["*://*.jandan.net/*"],
        "css": [ "src/css/jandan-dark-theme.css" ],
        "js": ["src/js/content_script.js"]
    }],
    "permissions": [
        "*://janbao.net/*",
        "*://jandan.net/*",
        "*://*.jandan.net/*"
    ]
}
